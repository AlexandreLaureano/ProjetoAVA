@model ModuloViewModel


<h2 class="title">Módulo para inserção de texto</h2>

<hr />
<div class="columns">
    <div class="column is-half">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="help is-danger"></div>
            <input asp-for="Tipo" value="3" type="hidden" />

            <div class="field">
                <label asp-for="Nome" class="label"></label>
                <input asp-for="Nome" class="input" />
                <span asp-validation-for="Nome" class="help is-danger"></span>
            </div>
            <div class="field">
                <label asp-for="Descricao" class="label"></label>
                <textarea asp-for="Descricao" class="textarea"></textarea>
                <span asp-validation-for="Descricao" class="help is-danger"></span>
            </div>
            
            <div class="field">
                <label asp-for="TurmaId" class="label"></label>
                <div class="control">
                    <div class="select">
                        <select asp-for="TurmaId" asp-items="ViewBag.TurmaId"></select>
                    </div>
                </div>
            </div>
            <div class="field">
                <input type="submit" value="Salvar" class="button is-primary" />
                <a asp-action="Index" class="button is-danger">Voltar</a>
            </div>
        </form>
    </div>
</div>

