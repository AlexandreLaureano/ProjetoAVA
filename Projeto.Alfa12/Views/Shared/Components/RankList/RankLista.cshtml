@model IEnumerable<Aluno>
<table class="table table-sm table-bordered">
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.FullName</td>
            <td class="text-right">
                @p.PontoGeral
            </td>
        </tr>
    }
    <tr>
        <th>Total:</th>
        <td class="text-right">
            @Model.Sum(p => p.PontoGeral)
        </td>
    </tr>
</table>