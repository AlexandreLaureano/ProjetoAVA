@model IEnumerable<Projeto.Alfa12.Models.Turma>

@{
    ViewData["Nome"] = "Index";
}

<p>
    <a asp-action="Create" class="button is-success">Criar nova turma</a>
</p>
@if (Model.Count() == 0)
{
    <tr><td colspan="2">Você não possui turmas</td></tr>
}
else
{
    <table class="table is-striped is-hoverable is-fullwidth ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataCriacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AreaConhecimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxPonto)
                </th>
               
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCriacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaConhecimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxPonto)
                    </td>
                   
                    <td>

                        <div class="buttons">


                            <a class="button is-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="button is-link" asp-action="AddAluno" asp-route-id="@item.Id">Adicionar Alunos</a>
                        <div class="buttons">
                        </div>
                        <a class="button is-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="button is-success" asp-action="Home" asp-route-id="@item.Id">Acessar Turma</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
