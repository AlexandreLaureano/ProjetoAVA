@model Turma


<h2>Home</h2>

<p>@Html.DisplayFor(model => model.Nome)</p>

@foreach (var item in Model.Modulos)
{
<div class="well">
    @Html.DisplayFor(modelItem => item.Nome)
    <a asp-controller="Modulos" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
    | <a asp-controller="Modulos" asp-action="Home" asp-route-id="@item.Id">Acessar Modulo</a>
</div>
        }

<a asp-action="Sair" class="btn btn-default" asp-route-id="@Model.Id">Sair da turma</a>



