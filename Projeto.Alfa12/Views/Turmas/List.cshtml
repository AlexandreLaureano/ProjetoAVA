@model ProductsListViewModel

@{
    ViewData["Nome"] = "Lista";
}
<h2 class="title">Lista de Turmas</h2>
<div class="buttons">
    <a asp-action="Create" class="button is-success">Criar</a>
</div>


<form class="field has-addons">
    <div class="control">
        <input type="text" class="input" placeholder="Nome" name="SearchString">
    </div>
    <div class="control">
        <button class="button is-info" type="submit" value="Filter">
            <i class="glyphicon glyphicon-search"></i>
            Pesquisar
        </button>
    </div>
</form>

<table class="table is-striped is-hoverable is-fullwidth ">
    <thead>
        <tr class="is-selected">
            <th>
                Nome
            </th>
            <th>
                Data de criação
            </th>
            <th>
                Descrição
            </th>
            <th>
                Área de conhecimento
            </th>
            <th>
                Chave de Acesso
            </th>
            <th>
                Pontos
            </th>
            <th>
                Professor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Itens)
        {
            @Html.Partial("ListTurma", p)
        }
    </tbody>
</table>

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="pagination-link" page-class-normal="btn-secondary"
     page-class-selected="pagination-link is-current" class="btn-group pull-right m-1">
</div>
