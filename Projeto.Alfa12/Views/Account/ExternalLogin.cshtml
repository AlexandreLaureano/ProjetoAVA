@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="title">@ViewData["Title"]</h2>
<h4 class="subtitle">Associate your @ViewData["LoginProvider"] account.</h4>
<hr />

<p class="text-info">
    You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="help is-danger"></div>
            <div class="field">
                <label asp-for="Email" class="label"></label>
                <input asp-for="Email" class="input" />
                <span asp-validation-for="Email" class="help is-danger"></span>
            </div>
            <button type="submit" class="button is-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
