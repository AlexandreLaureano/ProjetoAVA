@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

<h2 class="title">Login</h2>
<div class="columns">
    <div class="column is-half" >
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" >
                <h4 class="subtitle">Use sua conta para logar.</h4>
                <hr />
                <div asp-validation-summary="All" class="help is-danger"></div>
                <div class="field">
                    <label asp-for="Email" class="label"></label>
                    <input asp-for="Email" class="input" />
                    <span asp-validation-for="Email" class="help is-danger"></span>
                </div>
                <div class="field">
                    <label asp-for="Password" class="label"></label>
                    <input asp-for="Password" class="input" />
                    <span asp-validation-for="Password" class="help is-danger"></span>
                </div>
                <div class="field">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="field">
                    <button type="submit" class="button is-primary">Entrar</button>
                </div>
                <div class="field">
                    <p>
                        <a asp-action="ForgotPassword">Esqueceu sua senha?</a>
                    </p>
                    <p>
                        Não tem uma conta? <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Crie uma!</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
   
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
