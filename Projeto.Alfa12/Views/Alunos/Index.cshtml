@model IEnumerable<Projeto.Alfa12.Models.Aluno>


<h2 class="title">Lista de Alunos</h2>

<table class="table is-striped is-hoverable is-fullwidth ">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Identificador do Aluno")
            </th>
            <th>
                @Html.DisplayName("Nome")
            </th>

            <th>
                @Html.DisplayName("Data de Nascimento")
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName) 
                </td>

                <td>
                    @Convert.ToDateTime(item.DataNascimento).ToString("dd/MM/yyyy")
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                     <a class="button is-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>   |
                   <a class="button is-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>