@model Projeto.Alfa12.Models.Aluno
@{
    ViewData["Nome"] = "Detalhes";
}


<h4 class="subtitle has-text-centered"><strong>@Html.DisplayFor(model => model.FullName)</strong> </h4>
<hr />
<div class="columns">
    <div class="column is-one-third has-text-right">
        <dl class="dl-horizontal">
            <dt>
                <strong> @Html.DisplayNameFor(model => model.Ra)</strong>
            </dt>
            <dt>
                <strong>   @Html.DisplayNameFor(model => model.DataNascimento)</strong>
            </dt>
            <dt>
                <strong>  Nome para login</strong>
            </dt>
            <dt>
                <strong>  @Html.DisplayNameFor(model => model.Email)</strong>
            </dt>
        </dl>
    </div>
    <div class="column">
        <dl class="dl-horizontal">
            <dd>
                @Html.DisplayFor(model => model.Ra)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
    </div>

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="button is-primary">Editar</a>
    <a asp-action="Index" class="button is-danger">Voltar</a>
</div>
