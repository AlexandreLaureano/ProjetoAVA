@model SetPasswordViewModel
@{
    ViewData["Title"] = "Set password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4 class="subtitle">Set your password</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="help is-danger"></div>
            <div class="field">
                <label asp-for="NewPassword" class="label"></label>
                <input asp-for="NewPassword" class="input" />
                <span asp-validation-for="NewPassword" class="help is-danger"></span>
            </div>
            <div class="field">
                <label asp-for="ConfirmPassword" class="label"></label>
                <input asp-for="ConfirmPassword" class="input" />
                <span asp-validation-for="ConfirmPassword" class="help is-danger"></span>
            </div>
            <button type="submit" class="button is-primary">Set password</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
